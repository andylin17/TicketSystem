@model Account
@{
	Layout = null;
	ViewData["Title"] = "登入";
}
<!DOCTYPE html>
<html style="height: 100%">
<head>
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"] - TicketSystem</title>
	<link href="~/css/coreui.min.css" rel="stylesheet" />
	<link href="~/css/all.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
	<script src="~/js/site.js"></script>
</head>
<body class="c-app flex-row align-items-center">
	@* error msg *@
	<div class="modal fade" id="errorModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="NewsModalLabel" aria-hidden="true"></div>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-5 px-4">
				<form asp-action="Login" method="post">
					<div class="card-group">
						<div class="card p-4">
							<div class="card-body">
								<h1 class="text-center">登入</h1>
								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<i class="input-group-text cil-user"></i>
									</div>
									<input class="form-control" asp-for="LoginAccount" type="text" placeholder="Username">
								</div>
								<div class="row d-flex justify-content-center">
									<div class="btn-group">
										<button class="btn btn-info px-4" type="submit">Login</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	<script src="~/js/coreui.bundle.min.js"></script>
</body>

</html>